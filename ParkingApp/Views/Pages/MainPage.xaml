<Page x:Class="ParkingApp.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParkingApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Заполнить данные" Name="ClientDataBtn" Click="ClientDataBtn_Click" Width="150"></Button>
            <Button Content="Оформить заявку" Name="ParkingBtn" Click="ParkingBtn_Click" Width="150" Margin="0,10,0,10"/>
            <Button Content="Список активных" Name="ParkingDataListBtn" Click="ParkingDataListBtn_Click" Width="150" />
            <Button Content="Архив" Name="ArchiveBtn" Click="ArchiveBtn_Click" Width="150" Margin="0,10,0,10"/>
        </StackPanel>
    </Grid>
</Page>
